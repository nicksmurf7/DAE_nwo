version: "3"
services:
  postgres:
    image: "postgres:latest"
    environment:
      POSTGRES_DB: nwo_imdb
      POSTGRES_USER: fuck
      POSTGRES_PASSWORD: abcd1234
    container_name: "my_postgres"
    ports:
      - "5432:5432"

  pgadmin:
    image: dpage/pgadmin4
    links:
      - postgres
    depends_on:
      - postgres
    environment:
      PGADMIN_DEFAULT_EMAIL: admin
      PGADMIN_DEFAULT_PASSWORD: admin
    ports:
      - "5050:80"